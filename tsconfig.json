{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "lib": ["ES2020"],
    "outDir": "dist/types"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}